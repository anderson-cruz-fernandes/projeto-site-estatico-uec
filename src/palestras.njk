---
title: Palestras da UEC
layout: 'base.njk'
pagination:  
  data: palestras
  size: 3
---
<div class="container">  
  <div class="row">  
    <!-- COLUNA CENTRAL -->
    <div class="col s12 m12 l12">
      <div class="row">
        <div class="center col s12 m12 l12">
          <h2 class="teal-text">{{ title }}</h2>
        </div>
      </div>  
      <!-- PROXIMAS PALESTRAS TERCA-FEIRA -->
      <!--
      <div class="row">
        <div class="col s12 m12 l12">
          <div class="center icon-block">
            <h2 class="center brown-text"><i class="material-icons">person_pin</i></h2>
            <h4 class="center">Terça-Feira</h4>
            <h5 class="center">16:00</h5>
          </div>
        </div>
      </div>  
      <div class='row'></div>  
      -->
      <!-- FIM PROXIMAS PALESTRAS TERCA-FEIRA -->
      <!-- PROXIMAS PALESTRAS QUINTA-FEIRA -->     
      <div class="row">
        <div class="col s12 m12 l12">
          <div class="center icon-block">
            <h2 class="center brown-text"><i class="material-icons">person_pin</i></h2>
            <h4 class="center">Quinta-Feira</h4>
            <h5 class="center">20:00</h5>
          </div>
        </div>
      </div>
      <div class='row'>      
      {%- for item in pagination.items | ehQuintaFeira -%}      
        <div class="col s12 m4 l4">
          <div class="center icon-block">
            <hr>
            <h6 class="teal-text">{{ item.tema }}</h6>
            <h5>{{ item.date | postDate }}</h5>
            <span class="light">
              <img class='responsive-img' src='{{ item.foto }}' width='145px'>              
              <br>
              <span style="font-size: 12px;">
                Expositor:
              </span>
              <br>
              <span style="font-size: 16px;font-weight: bold;">{{ item.nome }}</span>
              <br>
              <span style="font-size: 14px;">{{ item.origem }}</span>
              <br>
              <span style="font-size: 14px;"></span>
              <span style="font-size: 14px;">
                <a href='{{ item.link }}' target='_blank'><img src='/assets/images/icon_assistir.png' width='150px' /></a>
              </span>
            </span>
          </div>
        </div>
        {%- endfor-%}   
      </div>
      <!-- FIM PROXIMAS PALESTRAS QUINTA-FEIRA -->
      <!-- PROXIMAS PALESTRAS SABADO -->
      <!--
      <div class="row">
        <div class="col s12 m12 l12">
          <div class="center icon-block">
            <h2 class="center brown-text"><i class="material-icons">person_pin</i></h2>
            <h4 class="center">Sábado</h4>
            <h5 class="center">18:00</h5>
          </div>
        </div>
      </div>  
      <div class='row'></div>
      -->
      <!-- FIM PROXIMAS PALESTRAS SABADO -->
      <!-- BARRA NAVEGACAO -->
      <div class="row">
        <div>
          <ul>
            <li>{%- if pagination.href.previous -%}<a href=" {{ pagination.href.previous }}"> << </a>{%- endif -%}</li>
            {%- for pageEntry in pagination.pages -%}
              <li><a href="{{ pagination.hrefs[loop.index0] }}">{{ loop.index }}</a></li>
            {%- endfor -%}
            <li>{%- if pagination.href.next -%}<a href=" {{ pagination.href.next }}"> >> </a>{%- endif -%}</li>
          </ul>
        </div>
      </div>
      <!-- FIM BARRA NAVEGACAO -->
      {% include "redes-sociais.njk" %}    
    </div>    
    <!-- COLUNA CENTRAL -->
  </div>
</div>