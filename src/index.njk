---
title: União Espírita Cristã
layout: 'base.njk'
---
<div class="container">
  <div class="row">
    <!-- COLUNA CENTRAL -->
    <div class="col s12 m12 l12">
      <!-- Linha 1 - SLIDER -->
      <div class="row">
        <div class="slider">
          <ul class="slides">
            <li><a href='https://cursos.uec.org.br' target='_blank'><img src='/assets/slider/banner_site.png'></a><div class='caption center-align'></div></li>
            <li><a href='' target='_blank'><img src='/assets/slider/frente-uec.jpg'></a><div class='caption center-align'></div></li>
          </ul>
        </div>
      </div>
      <!-- Linha 1 - FIM SLIDER -->

      <!-- Linha 2 - PERSONALIDADES -->
      <div class="row">
        <div class="col s12 m6 l6">
          <div class="card">
            <div class="card-image">
                <img src="/assets/images/allan_kardec.jpg">
            </div>
            <div class="card-stacked">
                <div class="card-content">
                  <span class="card-title">Allan Kardec</span>
                  <p>Codificador da Doutrina Espírita.</p>
                </div>
            </div>
          </div>
        </div>
        <div class="col s12 m6 l6">
          <div class="card">
            <div class="card-image">
              <img src="/assets/images/bezerra_de_menezes.jpg">
            </div>
            <div class="card-stacked">
              <div class="card-content">
                <span class="card-title">Bezerra de Menezes</span>
                <p>Patrono da União Espírita Cristã.</p>
              </div>
            </div>
          </div>
        </div>
      </div>
      <!-- PALESTRAS -->
      <div class="row">
        <div class="col s0 m1 l1">&nbsp;</div>
        <div class="col s12 m10 l10">
          <div class="card">
            <div class="card-content center-align">
              <span class="card-title"><a href="/palestras/">Palestras da UEC</a></span>              
            </div>
            {%- for palestra in palestras.palestras | aPartirDeHoje | exibir(3) -%}
            <div class="card">              
              <div class="card-content center-align">
                <span style='font-weight:bold;'>{{ palestra.tema }}</span>
                <br>
                <a href="javascript:document.getElementById('link_palestras').click()"><img class='responsive-img' src='{{ palestra.foto }}' title='{{ palestra.nome }}' width='145px'></a><br><i>{{ palestra.nome }}</i><br>{{ palestra.origem }}<br>{{ palestra.date | postDate }}<br>{{ palestra.dia_semana }}<br>{{ palestra.date | postHour }}
              </div>
            </div>
            {%- endfor %}                        
          </div>
        </div>
        <div class="col s0 m1 l1">&nbsp;</div>        
      </div>
      <!-- FIM PALESTRAS -->    
      
      <!-- REDES SOCIAIS -->
      {% include "redes-sociais.njk" %}
      <!-- FIM REDES SOCIAIS -->
    </div>
    <!-- FIM COLUNA CENTRAL -->
  </div>
</div>